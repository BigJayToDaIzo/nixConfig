layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="status-bar"
    };
    children
    pane size=1 borderless=true {
      plugin location="tab-bar"
    };
  };
  tab name="Home.nix" focus=true cwd="~/.config/nix" {
    pane split_direction="horizontal" {
      pane {
        size "75%"
        focus true
        borderless true
        command "nvim"
	args "home.nix" "flake.nix" "configuration.nix" "hardware-configuration.nix"
      }
      pane 
    }
  }
  tab name="neovim" cwd="~/.config/nvim" {
    pane split_direction="horizontal" {
      pane {
        start_suspended true
        size "75%"
        focus true
        borderless true
        command "nvim"
        args "init.lua"
      }
      pane 
    }
  }
  tab name="fish shell" cwd="~/.config/fish" {
    pane split_direction="horizontal" {
      pane {
        start_suspended true
        size "75%"
        focus true
        borderless true
        command "nvim"
        args "config.fish"
      }
      pane 
    }
  }

        notification_format_no_notifications "#[fg=#89b4fa,dim] Ó©´  "
        notification_show_interval           "10"

        hide_frame_for_single_pane "true"

        mode_normal  "#[fg=#CF142B,bg=green] Ó≠¥ UNLOCKED "
        mode_locked "#[bg=#CF142B] Ó©µ LOCKED "
        mode_session "#[fg=#333333,bg=green] Û∞πë {name} "
        mode_resize "#[fg=#333333,bg=#FF6700] Ó¨¢ {name} "
        mode_pane "#[fg=#333333,bg=green] ÓØà {name} "
        mode_tab "#[fg=#333333,bg=green] ‚≠æ {name} "
        mode_scroll "#[fg=#333333,bg=green] Û∞≠ú {name} "
        mode_enter_search "#[fg=#333333,bg=green] ÓôÑ {name} "
        mode_search "#[fg=#333333,bg=green] ÓôÑ {name} "
        mode_rename_tab "#[fg=#333333,bg=#FF6700] ‚≠æ {name} "
        mode_rename_pane "#[fg=#333333,bg=#FF6700] ÓØà {name} "
        mode_move "#[fg=#333333,bg=green] Ó¨¢ {name} "
        mode_prompt "#[fg=#333333,bg=green] Ó™Ö {name} "
        mode_default_to_mode "locked"

        tab_normal   "#[fg=#6C7086] {index}::{name} "
        tab_normal_fullscreen "#[fg=#6C7086] {index}::{name} Ó≠å "
        tab_normal_sync "#[fg=#6C7086] {index}::{name} Ó©∑ "

        tab_active   "#[fg=#89B4FA,bold,italic] {name} "

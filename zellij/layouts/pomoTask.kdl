        tab_active_sync "#[fg=#89B4FA,bold,italic] {name} Ó©∑ "

        tab_separator "#[fg=#89B4FA]‚ùØ"

        command_git_branch_command     "git rev-parse --abbrev-ref head"
        command_git_branch_format      "#[fg=blue] {stdout} "
        command_git_branch_interval    "10"
        command_git_branch_rendermode  "static"

        datetime        "#[fg=#89b4fa,bold] {format} "
        datetime_format "%A, %d %b %Y %H:%M"
        datetime_timezone "America/Chicago"
      }
    }
  }
  tab name="Task Warrior" focus=true cwd="/home/jm" {
    pane split_direction="vertical" {
      pane size="35%" {
        pane {
          command "cbonsai"
          borderless true
          args "-li" "-t 0.5" 
        }
        pane size="30%"{
          command "peaclock"
          args "--config-dir" "/home/jm/.config/peaclock"
          name "ÓéÑ"
        }
        pane size=4 { // pomotimer
          name "üçÖ Pomo F'SHOmo üçÖ"
          command "tomatoshell"
          args "-n" "6" "-p" "p"
          start_suspended true
        } 
      }
      // stacked panes go here
      pane {
        pane stacked=true {
          pane borderless=true { // watch sync
            size 1
            command "watch"
            args "-c" "-d" "-n" "600" "task" "sync"
          }
          pane expanded=true { // task warrior
            name "Git'r Dun!"
            focus true
            command "task"
          }
        }
      }

    }
  }
  tab name="Weather Station" hide_floating_panes=true {
    pane {
      focus true
      name "‚òî or üåû‚ùì"
      command "sh"
      args "/home/jm/.local/scripts/wttrIn.sh"
    }
    floating_panes {
      pane {
        name "Hourly Forecast"
        height "50%"
        plugin location="file:/home/jm/.config/zellij/plugins/weather-pal.wasm"
      }
    }
  }
  tab name="Aquarium" {
    pane command="asciiquarium"
  }
}
